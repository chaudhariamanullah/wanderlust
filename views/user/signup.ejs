<% layout("/layouts/boilerplate") %>

<div class="row mt-3">
    <div class="col-6 offset-3">
        <h1 class="col-6 offset-3"> &nbsp;Signup For WanderLust</h1>
        <form action="/signup" method="post" class="needs-validation" novalidate >

            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input type="text" name="username" class="form-control" required id="username">
                <div class="invalid-feedback">Enter A Valid Title Please.</div>
            </div>

            <div class="mb-2">
                <label for="email" class="form-label">Email</label>
                <input type="text" name="email" class="form-control" required id="email">
            </div>

            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input type="text" name="password" class="form-control" required id="password">
            </div>

             <button class="btn btn-danger">SignUp</button>
        </form>
    </div>
</div>
